#!/bin/bash

# Stop on errors, print commands
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail
set -x

# Check code style
pycodestyle insta485

# Chcek doc style
pydocstyle insta485

# Run pylint 
pylint --disable=cyclic-import --unsafe-load-any-extension=y insta485

# Run all unit tests
pytest -v tests 
